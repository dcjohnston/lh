<VirtualHost *:80>
  ServerName listherd.com
  ServerAdmin webmaster@listherd.com
  DocumentRoot /data/applications/lh
  ErrorLog /data/logs/listherd.com-error.log
  CustomLog /data/logs/listherd.com-access.log combined

  WSGIScriptAlias / /data/applications/lh/listherd/wsgi.py
  WSGIDaemonProcess lh python-path=/data/applications/lh/listherd:/data/applications/lh
  WSGIProcessGroup lh

  Alias /static /data/applications/lh/static
  <Directory /data/applications/lh/static>
    Satisfy Any
    Allow from all
    Require all granted
  </Directory>

  <Directory /data/applications/lh>
    Satisfy Any
    Allow from all
  </Directory>
</VirtualHost>
